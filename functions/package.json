{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "generate": "prisma generate",
    "db:seed": "npm run build && node ./lib/seed.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev && npm run db:generate",
    "db:studio": "prisma studio",
    "db:format": "prisma format",
    "db:reset": "prisma migrate reset",
    "db:deploy": "prisma migrate deploy && npm run db:generate",
    "dev:setup": "npm run db:generate && npm run db:push && npm run db:seed",
    "prod:setup": "npm run db:generate && npm run db:deploy"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/functions-framework": "^3.4.2",
    "@prisma/client": "^6.11.1",
    "axios": "^1.7.4",
    "bcryptjs": "^3.0.2",
    "dayjs": "^1.11.13",
    "firebase-admin": "^12.2.0",
    "firebase-functions": "^6.4.0",
    "handlebars": "^4.7.8",
    "memory-cache": "^0.2.0",
    "nodemailer": "^6.9.13",
    "prisma": "^6.11.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/memory-cache": "^0.2.5",
    "@types/node": "^24.0.13",
    "@types/nodemailer": "^6.4.15",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.29.1",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "private": true
