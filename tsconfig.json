{
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "types": ["vite-plugin-pwa/client", "jest", "vite-plugin-pwa/react"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src",
    "src/utils/seedDb.ts",
    "tests",
    "public/deprecated.sw.js",
    "public/deprecated.swDev.js"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
